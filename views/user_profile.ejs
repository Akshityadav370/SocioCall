<link rel="stylesheet" href="/css/user_profile.css" />

<main>
  <h1 id="page-heading"><%=heading%></h1>

  <% if (profile_user.avatar) { %>
  <img src="<%=profile_user.avatar%>" alt="<%= profile_user.name%>" />
  <% } else { %>
  <img
    src="https://media.istockphoto.com/id/1093292836/vector/photo-coming-soon-picture-frame-vector-illustration.jpg?s=170667a&w=0&k=20&c=q3W4zw-lhqUCOLVRWYZefTF8tjEfQ_7FsJcID6bm1HQ="
    alt="<%= profile_user.name%>"
  />
  <% } %> <% if( locals.user && locals.user.id == profile_user.id) { %>

  <form
    action="/users/update/<%= profile_user.id %>"
    enctype="multipart/form-data"
    method="POST"
  >
    <input type="file" name="avatar" placeholder="profile-picture" />
    <input
      type="text"
      name="users_name"
      id="users_name"
      value="<%= profile_user.name %> "
      required
    />
    <input
      type="email"
      name="users_email"
      id="users_email"
      value="<%= profile_user.email %>"
      required
    />

    <input type="submit" value="UPDATE" />
  </form>
  

  <h3 id="user-name"><%= profile_user.name%></h3>

  <h3 id="user-email"><%= profile_user.email%></h3>


  <a href="/friends/toggle/?userID=<%=profile_user.id%>" id="friend-toggle">
    <button id="friend-toggle-button">
      <% if (isFriend) {%> <%= "Remove Friend" %> <% } else {%> <%= "Add Friend"
      %> <% } %>
    </button>
  </a>

  <h3>User Posts</h3>

  <div id="posts-display-wrapper">

    <% for(p of userPosts) { %>
        
        <%- include('_user_wall') -%>

    <% } %>

    
</div>
  <% } else { %> 
    <p><%= profile_user.name %></p>
    <p><%= profile_user.email %></p>

    

    <a href="/friends/toggle/?userID=<%=profile_user.id%>" id="friend-toggle">
        <button id="friend-toggle-button">
            <% if (isFriend) {%>
                <%= "Remove Friend" %>
            <% } else {%>
                <%= "Add Friend" %>
            <% } %>
        </button>
    </a>

    <h3>User Posts</h3>

  <div id="posts-display-wrapper">

    <% for(p of userPosts) { %>
        
        <%- include('_user_wall') -%>

    <% } %>

    
</div>
  <% } %>
</main>

